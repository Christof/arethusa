{
  "main" : {
    "colorize" : true,
    "template"  : "templates/main_with_sidepanel.html",
    "retrievers" : [
      "treebankRetriever"
    ],
    "plugins" : [
      "text",
      "depTree",
      "morph",
      "history",
      "external_history",
      "comment"
    ]
  },

  "navbar" : {
    "template" : "templates/navbar1.html",
    "search" : true,
    "navigation" : true
  },

  "retrievers" : {
    "treebankRetriever" : {
      "resource" : "fakePerseids"
    },
    "bspMorphRetriever" : {
      "resource" : "morphologyService"
    }
  },

  "resources" : {
    "fakePerseids" : {
      "route" : "http://74.70.97.104:8085/xml_server/:doc",
      "params" : [
        "doc",
        "s"
      ]
    },
    "morphologyService" : {
      "route" : "http://services.perseids.org/bsp/morphologyservice/analysis/word?lang=lat&engine=morpheuslat"
    }
  },

  "plugins" : {
    "text" : {
      "name" : "text",
      "main" : true,
      "template"  : "templates/text2.html"
    },

    "depTree" : {
      "name" : "depTree",
      "main" : true,
      "template" : "templates/dep_tree.html"
    },

    "morph" : {
      "name" : "morph",
      "retrievers" : [
        "bspMorphRetriever"
      ],
      "template"  : "templates/morph2.html",
      "contextMenu" : true,
      "contextMenuTemplate": "templates/arethusa.morph/context_menu.html",
      "fileUrl" : "./static/configs/morph/attributes.json"
    },

    "history" : {
      "name" : "history",
      "main" : true,
      "listener" : true,
      "maxSize" : 5,
      "template" : "templates/history.html"
    },

    "external_history" : {
      "name" : "external_history",
      "listener" : true,
      "external" : true,
      "template" : "templates/external_history.html"
    },

    "comment" : {
      "name" : "comment",
      "template" : "templates/comment2.html"
    }
  }
}
