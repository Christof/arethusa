{
  "main" : {
    "template"  : "templates/main2.html",
    "retrievers" : {
      "TreebankRetriever" : {
        "resource" : "staticFiles"
      }
    },
    "plugins" : [
      "text",
      "depTree",
      "morph",
      "history",
      "external_history",
      "comment"
    ]
  },

  "navbar" : {
    "template" : "templates/navbar1.html",
    "search" : true,
    "navigation" : true
  },

  "resources" : {
    "staticFiles" : {
      "route" : "http://services.perseids.org/llt-data/:doc.xml",
      "params" : ["doc"]
    },
    "morphologyService" : {
      "route" : "http://services.perseids.org/bsp/morphologyservice/analysis/word?lang=lat&engine=morpheuslat"
    }
  },

  "plugins" : {
    "text" : {
      "name" : "text",
      "main" : true,
      "template"  : "templates/text2.html"
    },

    "depTree" : {
      "name" : "depTree",
      "main" : true,
      "template" : "templates/dep_tree.html"
    },

    "morph" : {
      "name" : "morph",
      "retrievers" : {
        "BspMorphRetriever" : {
          "resource" : "morphologyService"
        }
      },
      "template"  : "templates/morph2.html",
      "fileUrl" : "./static/configs/morph/attributes.json"
    },

    "history" : {
      "name" : "history",
      "listener" : true,
      "maxSize" : 5,
      "template" : "templates/history.html"
    },

    "external_history" : {
      "name" : "external_history",
      "listener" : true,
      "external" : true,
      "template" : "templates/external_history.html"
    },

    "comment" : {
      "name" : "comment",
      "template" : "templates/comment2.html"
    }
  }
}
